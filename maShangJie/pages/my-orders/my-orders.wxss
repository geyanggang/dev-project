/* pages/my-orders/my-orders.wxss */
.order-list {
  padding: 20rpx;
}

.order-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
}

.amount-section {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.amount-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.amount-item:last-child {
  margin-bottom: 0;
}

.amount-item .label {
  font-size: 26rpx;
  color: #666;
}

.amount-item .value {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.payment-status {
  display: flex;
  gap: 40rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.status-item {
  display: flex;
  align-items: center;
}

.status-item .label {
  color: #999;
  margin-right: 8rpx;
}

.status-item .value {
  font-weight: 600;
}

.text-pending {
  color: #ff9800;
}

.text-paid {
  color: #4caf50;
}

.text-refunded {
  color: #f44336;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.role {
  font-size: 24rpx;
  color: #999;
}

.time-info {
  font-size: 24rpx;
  color: #999;
}

.time-item {
  margin-bottom: 8rpx;
}

.time-item:last-child {
  margin-bottom: 0;
}

.time-item .label {
  margin-right: 8rpx;
}

