/* pages/user-setup/user-setup.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.setup-content {
  width: 100%;
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.role-selector {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.role-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.2);
  border: 3rpx solid transparent;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  color: #fff;
  transition: all 0.3s;
}

.role-card.active {
  background: #fff;
  color: #667eea;
  border-color: #fff;
  transform: scale(1.05);
}

.role-card image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.role-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.role-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.skills-section {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  animation: slideIn 0.3s ease;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 20rpx;
  text-align: center;
}

.skills-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.skills-selector .tag {
  background: rgba(255, 255, 255, 0.3);
  color: #fff;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.skills-selector .tag.tag-primary {
  background: #fff;
  color: #667eea;
  border-color: #fff;
}

.hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}

.auth-section {
  margin-top: 60rpx;
}

.auth-btn {
  width: 100%;
  background: #fff;
  color: #667eea;
  font-size: 34rpx;
  font-weight: 600;
  padding: 28rpx;
}

.auth-btn[disabled] {
  background: rgba(255, 255, 255, 0.5);
  color: rgba(102, 126, 234, 0.5);
}

.agreement {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
  margin-top: 30rpx;
  line-height: 1.6;
}

.link {
  color: #fff;
  font-weight: 600;
  text-decoration: underline;
}

