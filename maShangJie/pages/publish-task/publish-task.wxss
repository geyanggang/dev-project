/* pages/publish-task/publish-task.wxss */
.container {
  min-height: 100vh;
  background: #f8f8f8;
}

.publish-form {
  padding: 20rpx;
}

.form-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.label {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.required {
  color: #f44336;
  margin-right: 8rpx;
}

.input {
  width: 100%;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input:focus {
  background: #fff;
  border-color: #667eea;
}

.textarea {
  width: 100%;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  min-height: 200rpx;
  line-height: 1.6;
}

.hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
  text-align: right;
}

.budget-input {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.budget-input .input {
  flex: 1;
}

.separator {
  font-size: 28rpx;
  color: #999;
}

.picker {
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.picker:empty::before {
  content: '请选择截止日期';
  color: #999;
}

.tech-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tech-selector .tag {
  cursor: pointer;
  transition: all 0.3s;
  padding: 16rpx 32rpx;
}

.tech-selector .tag:active {
  transform: scale(0.95);
}

.ai-estimate-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  color: #fff;
}

.ai-estimate-section .btn-secondary {
  background: #fff;
  color: #667eea;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  border: none;
}

.ai-estimate-section .btn-secondary image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.ai-result {
  margin-top: 30rpx;
  text-align: center;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
}

.ai-label {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 10rpx;
}

.ai-price {
  font-size: 56rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
}

.ai-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

.price-input {
  font-size: 36rpx;
  font-weight: 600;
  color: #667eea;
}

.submit-section {
  padding: 40rpx 20rpx;
}

.submit-btn {
  width: 100%;
  font-size: 34rpx;
  padding: 28rpx;
}

