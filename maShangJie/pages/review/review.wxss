/* pages/review/review.wxss */
.review-form {
  padding: 20rpx;
}

.task-info {
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.task-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.task-amount {
  font-size: 48rpx;
  font-weight: 700;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.role {
  font-size: 26rpx;
  color: #999;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.star-rating {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.star {
  font-size: 80rpx;
  color: #ddd;
  transition: all 0.3s;
  cursor: pointer;
}

.star.active {
  color: #ffa500;
  transform: scale(1.1);
}

.rating-text {
  text-align: center;
  font-size: 28rpx;
  color: #667eea;
  font-weight: 600;
}

.comment-input {
  width: 100%;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  min-height: 200rpx;
  line-height: 1.6;
}

.hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
  text-align: right;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.submit-section {
  padding: 20rpx 0;
}

.submit-btn {
  width: 100%;
  font-size: 34rpx;
  padding: 28rpx;
}

